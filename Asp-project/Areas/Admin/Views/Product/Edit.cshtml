@model ProductEditVM
@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<div class="container mt-5 ml-3">
    <h3>Edit Product</h3>
    <form method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="card">
            <div class="form-group">
                <h5>Name</h5>
                <input asp-for="Name" class="form-control" placeholder="Name" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
            <div class="form-group">
                <h5>Price</h5>
                <input asp-for="Price" class="form-control" type="number" step="any" placeholder="Price" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
            <div class="form-group">
                <h5>Description</h5>
                <input asp-for="Description" class="form-control" placeholder="Description" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
               <div class="form-group">
                <h5>Category</h5>
                <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories">
                </select>
                <span class="text-danger" asp-validation-for="CategoryId"></span>
            </div>
            <div class="form-group">
                <h5>Weight</h5>
                <input asp-for="Weight" class="form-control" type="number" step="any" placeholder="Weight" />
                <span class="text-danger" asp-validation-for="Weight"></span>
            </div>
            <div class="form-group">
                <h5>Country of Origin</h5>
                <input asp-for="CountryOfOrigin" class="form-control" placeholder="Country of Origin" />
                <span class="text-danger" asp-validation-for="CountryOfOrigin"></span>
            </div>
            <div class="form-group">
                <h5>Min Weight</h5>
                <input asp-for="MinWeight" class="form-control" type="number" step="any" placeholder="Min Weight" />
                <span class="text-danger" asp-validation-for="MinWeight"></span>
            </div>
            <div class="form-group">
                <h5>Check</h5>
                <input asp-for="Check" class="form-control" placeholder="Check" />
                <span class="text-danger" asp-validation-for="Check"></span>
            </div>
            <div class="form-group">
                <h5>Quality</h5>
                <input asp-for="Quality" class="form-control" placeholder="Quality" />
                <span class="text-danger" asp-validation-for="Quality"></span>
            </div>        
            <h5>Images:</h5>
            <div class="image-gallery">
                @foreach (var image in Model.Images)
                {
                    <div class="image-wrapper @(image.IsMain ? "main-image" : "")">
                        <img src="~/img/@image.Image" style="width:100px;height:100px" />
                        @if (!image.IsMain)
                        {
                            <button type="button" class="btn btn-danger delete-image">
                                <i class="fa-regular fa-trash-can"></i>
                            </button>
                        }
                    </div>
                }
            </div>
            <h5 class="input">
                <h5>Upload New Images:</h5>
                <input asp-for="NewImages" class="input__field field" type="file" multiple />
                <span class="text-danger" asp-validation-for="NewImages"></span>
            </h5>
            <div class="button-group">
                <button type="submit" class="btn btn-primary">Submit</button>
                <a class="btn btn-success" asp-action="Index">Back</a>
            </div>
        </div>
    </form>
</div>
